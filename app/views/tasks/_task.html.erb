<turbo-frame id="<%= dom_id task %>" class="block mb-7">

  <%= form_with(model: task, class: "mb-2") do |f| %>
    <%= f.check_box :completed, data: {
      id: task.id,
      action: "tasks#toggle"
    }, class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>

    <h3 class="font-semibold text-xl inline-block -mb-1"><%= task.title %></h3>
  <% end %>

  <div class="flex gap-4">

    <%= link_to 'Edit', edit_task_path(task), class: 'text-gray-500' %>

    <%= button_to "Delete", task_path(task), method: :delete, data: {
      "turbo-frame": "_top"
    }, class: "text-red-500" %>
  </div>

</turbo-frame>